{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <a href="{{path('product_create')}} " class='btn btn-success'>New Product</a>
    <a href="{{path('product_create')}} " class='btn btn-default'>Order Product</a>

    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Description</th>
{#                <th>Date</th>#}
                <th>Image</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <th scope="row">{{ product.id }}</th>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.date}}</td>
                    <td> <img src="{{ asset('upload/productImages/' ~ product.image) }}" width="100px" height="100px" /><td>
                    <td>
                        <a href="{{path('product_details',{'id':product.id})}} " class='btn btn-success'>View</a>
                        <a href="{{path('product_edit',{'id':product.id})}} " class='btn btn-default'>Edit</a>
                        <a href="{{ path('product_delete', {'id': product.id}) }} "class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
